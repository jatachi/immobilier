{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div class="row property-container">

        {% for property in properties %}
            <div class="col-md-4">
               <div class="property-item text-align">
                    <a href="{{ path('property',{'slug':property.slug})}}"><img src="/uploads/{{ property.illustration }}" alt="{{ property.name }}" class="img-fluid"></a>
                    <h5>{{ property.name }}</h5>
                    <p>{{ property.proximite }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
