{% extends 'base.html.twig' %}

{% block title %}{{ property.name }}- Schama immobilier{% endblock %}

{% block body %}
    <h1 class="text-center">{{ property.name }}</h1>

    <div id="carouselExample" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for key,header in property.attachements %}
                <li data-target="#carouselExample" data-slide-to="{{ key}}"
                {% if key == 0 %} class="active">{% endif %}</li>
            {% endfor %}
        </ol>
        <div class="carousel-inner">
            {% for key,header in property.attachements %}
                <div class="carousel-item{% if key == 0 %} active {% endif %}">
                    <img src="/images/property/{{ header.image }}" class="d-block w-100 image-carousel" alt="...">
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
